<%- include("_header") %>

    <%- include("_page") %>

        <div class="container mt-5 pt-5">

            <% 
            
            const posts = $page.$pages;
            
            %>

            <% for(const post of posts) { %>

                <div class="card mb-5 bg-transparent border-0">
                    <div class="row g-0">
                        <div class="col-md-4 text-center">
                        <img src="/<%= post.$path %>/<%= post.image %>" 
                            class="img-fluid" alt="<%= post.title %>">
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title"><%= post.title %></h3>
                            <p class="text-muted">
                                <%- include("_date", {date: post.date})%>
                            </p>
                            <p class="card-text"><%= post.description %></p> 
                            <p>
                            <a class="card-link" href="/<%= post.$path %>" role="button">Leer el art√≠tculo completo &RightArrow;</a>
                            </p>                     
                        </div>
                        </div>
                    </div>
                </div>

            <% } %>

        </div>

        <%- include("_footer") %>