<%- include("_header") %>

    <%- include("_page") %>

        <div class="container mt-5 pt-5">

            <% 
            
            const posts = utils.sortPagesByDate(page.children);
            
            %>

            <% posts.forEach(post=> { %>

                <div class="card mb-5 bg-transparent border-0">
                    <div class="row g-0">
                        <div class="col-md-4 text-center bg-primary">
                        <img src="/<%= post.directory %>/<%= post.metadata.image %>" 
                            class="img-fluid" alt="<%= post.metadata.title %>">
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title"><%= post.metadata.title %></h3>
                            <p class="card-text"><%= post.metadata.description %></p> 
                            <p>
                            <a class="card-link" href="/<%= post.directory %>" role="button">Leer el art√≠tculo completo &RightArrow;</a>
                            </p>                     
                        </div>
                        </div>
                    </div>
                </div>

            <% }) %>

        </div>

        <%- include("_footer") %>