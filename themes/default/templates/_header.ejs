<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= site.metadata.title %> </title>

    <link rel="stylesheet" href="/bootstrap/simplex/bootstrap.min.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
</head>

<body>

    <nav class="navbar navbar-expand-lg border-0">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" alt="" height="30" class="d-inline-block align-text-top">
                Creadores Cubanos de Videojuegos
              </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                    <% site.children.forEach(child=> { %>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/<%= child.directory %>">
                                <%= child.metadata.title %>
                            </a>
                        </li>
                    <% }); %>
                    
                </ul>
            </div>
        </div>
    </nav>
